                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="20.04.2014" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" toolkit:SlideInEffect.LineIndex="2" VerticalAlignment="Bottom" FontWeight="Bold" FontSize="49" />
